<div class="jumbotron">
  <h1><%= pkg.name.charAt(0).toUpperCase() + pkg.name.slice(1) %></h1>
  <p class="lead"><%= pkg.description %>.</p>

  <div class="btn-toolbar">
    <a class="btn btn-primary mr-2" href="https://github.com/<%= pkg.repository %>/archive/v<%= pkg.version %>.zip" download>
      <span class="fa fa-cloud-download fa-lg"></span>
      <span>Download</span>
    </a>

    <a id="gh-view-link" class="btn btn-secondary" href="https://github.com/<%= pkg.repository %>" target="_blank">
      <span class="fa fa-github fa-lg"></span>
      <span>View on GitHub</span>
    </a>
  </div>
</div>
